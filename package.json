{
  "private": true,
  "name": "@acme/monorepo",
  "scripts": {
    "dev": "turbo dev",
    "dev:example": "turbo dev --filter=\"{./apps/example}...\"",
    "lint": "turbo lint",
    "test": "turbo test",
    "build": "turbo build",
    "build:example": "turbo build --filter=\"...{./apps/example}\"",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json}\""
  },
  "devDependencies": {
    "turbo": "^2.4.4",
    "typescript": "^4.9.5"
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "none",
    "semi": false,
    "endOfLine": "auto"
  },
  "packageManager": "pnpm@10.4.1"
}
